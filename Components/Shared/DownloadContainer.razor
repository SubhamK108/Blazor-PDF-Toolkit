@inject IJSRuntime JS

<div class="h-full flex flex-col justify-center items-center">
    @if (ToolName!.Equals("Image To PDF Converter"))
    {
        <div class="font-bold tracking-wide h-[8rem] flex flex-col justify-center items-center text-center max-sm:mb-6 mt-14 max-sm:mt-5 px-2 text-6xl max-sm:text-[2.5rem] font-sans">
            @ToolName
        </div>
    }
    else
    {
        <div class="font-bold tracking-wide h-[8rem] flex flex-col justify-center items-center text-center mt-14 max-sm:mt-5 px-2 text-6xl max-sm:text-[2.5rem] font-sans">
            @ToolName
        </div>
    }

    <div class="font-semibold h-[12rem] px-6 flex flex-col justify-center items-center text-center mb-8 mt-5 max-sm:-mt-11 text-[1.7rem] max-sm:text-[1.55rem] font-sans">
        <div class="mb-5 max-sm:mb-4">@Core.DownloadMessage</div>
        <div class="text-5xl max-sm:text-[2.2rem]">ðŸŽ‰ ðŸŽŠ</div>
    </div>
    <div class="h-[6rem] max-sm:h-[5rem]">
        <button class="text-3xl max-sm:text-2xl rounded-xl bg-green-700 dark:bg-green-900 hover:bg-green-900 dark:hover:bg-green-950 disabled:bg-zinc-400 dark:disabled:bg-zinc-800 hover:ring hover:ring-green-500 dark:hover:ring-green-700 disabled:ring-transparent dark:disabled:ring-transparent text-gray-200 disabled:text-zinc-300 dark:disabled:text-zinc-600 p-2 h-[4.5rem] w-56 max-sm:h-16 max-sm:w-44">
            <a download="@Core.FinalPdfFilename" href="@Core.FinalPdfUrl">
                <i class="fa-solid fa-download mr-3"></i>Download
            </a>
        </button>
    </div>
    <div class="h-[6rem]">
        <button
            class="text-3xl max-sm:text-2xl rounded-xl bg-[#074DA6] dark:bg-[#05336E] hover:bg-[#05346e] dark:hover:bg-[#04234D] hover:ring hover:ring-[#0091ff] dark:hover:ring-[#074DA6] text-gray-200 p-2 h-[4.5rem] w-56 max-sm:h-16 max-sm:w-44"
            @onclick="RefreshApp!"
        >
            <i class="fa-solid fa-arrow-rotate-right mr-3"></i>Re-Do
        </button>
    </div>
</div>

@code {
    [Parameter] public string? ToolName { get; set; }
    [Parameter] public Action? RefreshApp { get; set; }
}